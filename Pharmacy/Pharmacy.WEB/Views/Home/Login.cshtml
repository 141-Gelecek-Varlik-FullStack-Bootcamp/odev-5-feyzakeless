<div class="login-wrapper d-flex justify-content-center flex-wrap w-100">
    <div class="login-body p-4 w-25 mt-5 mb-5">
        <div class="form-title">Login</div>
        <form method="post" asp-controller="Home" asp-action="Login" class="w-100">
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input name="email" type="text" class="form-control" id="email" aria-describedby="emailHelp">
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="Password">
                <div id="emailHelp" class="form-text">We'll never share your password with anyone else.</div>
            </div>

            <button type="submit" class="btn btn-primary">Log In</button>
        </form>
        <div class="register-text w-100 text-center mt-2">
            Eğer hesabınız yoksa kayıt için lütfen <a asp-controller="User" asp-action="InsertUser">tıklayınız.</a>
        </div>
    </div>
</div>

<style>
    .login-wrapper .login-body{
        background-color: rgb(0 0 0 / 75%);
        border-radius: 8px;
        margin: auto;
        box-shadow: rgb(0 0 0 / 50%) 0px 5px 15px;
    }
    .login-wrapper .form-title{
        text-align: center;
        font-size: 4rem;
        font-weight: 600;
        padding-bottom: 15px;
        color: #fff;
    }
    .login-wrapper button{
        width:100%;
    }
    .login-wrapper label,
    .login-wrapper .form-text,
    .login-wrapper .register-text{
        color:#fff;
    }
    .login-wrapper .register-text a{
        color:#ff6a00;
    }
</style>